{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "module": "Node16",
    "preserveConstEnums": true,
    "moduleResolution": "Node16",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": [
      "node"
    ],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}